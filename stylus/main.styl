*,
*::after,
*::before 
  padding 0
  margin 0
  box-sizing border-box

body 
  font-family 'Inter', sans-serif
  background white

header 
  display flex
  align-items center
  justify-content space-around
  position fixed
  width 100%
  padding 1.3rem
  box-shadow: 2px 0px 5px rgba(0, 0, 0, 0.05);
  background #FFF

  .location
    font-size 0.9rem
    display flex
    flex-direction column
    align-items center

  .locationPicked
    display flex
    align-items center
    cursor pointer

    span
      color #cc0000
      cursor pointer
      margin-right 5px

main
  background #F0F0F0
  width 100%
  height 100vh
  display flex
  justify-content space-around
  align-items center
  .imagesCar 
    background white
    width 50%
    height 60%
    border-radius 10px
    display flex
    justify-content center
    align-items center
  .detailsCar
    width 30%
    height 60%
    border-radius 10px
    display flex
    justify-content  space-between
    align-items center
    flex-direction column
  .listCarVersions 
      background #FFF
      display flex
      align-items center
      justify-content space-between
      width 100%
      border-radius 10px
      padding: 2rem
      height 100px
      box-shadow: 2px 0px 5px rgba(0, 0, 0, 0.05);
      a
        text-decoration none
        color #3F3F3F
        transition all 0.2s ease
        &:hover
          color #CC0000
          font-weight bold
          border-bottom 2px solid #CC0000
  .infoColors 
    @extends .listCarVersions
    flex-direction column

    p
      text-align center
      color #5C5C5C
      font-size 0.9rem

    .listColors
      display flex

      .colors-hex
        width 30px
        height 30px
        border-radius 50%
        margin-right 10px 
        cursor pointer
        box-shadow inset 0 1px 8px #0000004a

    .nameColorSelected
      margin-top 1rem
      font-size 0.8rem
      color #5c5c5c

  .infoPrice
    @extends .infoColors
    flex-direction row
    justify-content center
  
    span
      display flex
      align-items center
      font-size 0.9rem
      color #5c5c5c
      text-align center

    p
      color #cc0000
      margin-left 5px
      font-weight bold
      font-size 1.2rem

.modal-state
  background #06060699
  width 100%
  height 100vh
  display none
  align-items center
  justify-content center
  flex-direction column
  position absolute
  top 0
  &.active
    display flex

  .modal-container
    display flex
    justify-content center
    flex-direction column
    align-items center
    width 30%
    height 50vh
    background white
    border-radius 20px
    text-align center
    padding 1rem
    position relative

    .modal-title h3
      font-weight 300
      font-size 1.1rem
    h2
      font-size 1.4rem
      margin-bottom 1.5rem

  .modal-description
    color #525252
    font-size 0.9rem
    max-width 300px

  .modal-search
    display flex
    flex-direction column
    padding 1rem
    width 60%
    margin-top 0.5rem

    select
      padding 0.5rem
      border-radius 5px
      margin-bottom 1rem

    button 
      background #cc0000
      padding 0.5rem
      border-radius 5px
      border none
      color white
      cursor pointer
      transition background-color 0.4s ease
      &:hover
        background #B20303
